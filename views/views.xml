<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="drip_marketing_chain_view_form" model="ir.ui.view">
        <field name="name">drip.marketing.chain.view.form</field>
        <field name="model">drip.marketing.chain</field>
        <field name="arch" type="xml">
            <form string="Chain">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="mailing_list_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="drip_marketing_email_view_form" model="ir.ui.view">
        <field name="name">drip.marketing.email.view.form</field>
        <field name="model">drip.marketing.email</field>
        <field name="arch" type="xml">
            <form string="Email">
                <sheet>
                    <group>
                        <field name="chain_id"/>
                        <field name="subject"/>
                        <field name="content"/>
                        <field name="gap_duration"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
